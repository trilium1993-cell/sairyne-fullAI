# Sairyne Environment Variables (Example)
# Copy this file to .env.local for local development

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Backend API URL
# Development: http://localhost:3001
# Production: https://api.sairyne.com (or your Railway/Render URL)
VITE_API_URL=http://localhost:3001

# ============================================
# BACKEND CONFIGURATION (for backend team)
# ============================================

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...your-key-here

# Server Port
PORT=3001

# Node Environment
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database URL (optional for MVP - can use localStorage)
# DATABASE_URL=postgresql://user:pass@host:5432/sairyne

# JWT Secret (optional for MVP)
# JWT_SECRET=your-secret-key-here

# ============================================
# JUCE PLUGIN CONFIGURATION
# ============================================

# WebView URL for JUCE plugin
# Development: http://localhost:5173
# Production: https://sairyne.vercel.app
JUCE_WEBVIEW_URL=http://localhost:5173

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================

# Vercel
# (Vercel automatically sets these, no need to configure)

# Railway / Render
# Set VITE_API_URL to your deployed backend URL

